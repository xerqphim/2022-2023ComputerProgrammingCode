def slowType(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.075)

def sameLine(string):
        sys.stdout.write(string)
        sys.stdout.flush()

def start():
    global day
    os.system('clear')
    day = day + 1
    if day >= 2:
        print("Another day, another slay,")
    print("The yellow duck got ready to go to the park to spend his time productivly. Maybe he wants some grapes!")
    print('''                                      ___
                                   ,-""   `.
                                 ,'  _   e )`-._
                                /  ,' `-._<.===-'
                               /  /
