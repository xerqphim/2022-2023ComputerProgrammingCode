    haveDrank = False
    haveSwung = False
    haveHammer = False
    haveMoney = False
    day = 0
    visitLemon = 0
    start()

def win():
    global haveDrank
    global haveSwung
    global haveHammer
    global haveMoney
    global day
    global visitLemon
    os.system('clear')
    slowType('WOO YOU WON ♡⸜(˶˃ ᵕ ˂˶)⸝♡ !!!')
    time.sleep(1)
    print('''\n                                ,.        ,.      ,.
